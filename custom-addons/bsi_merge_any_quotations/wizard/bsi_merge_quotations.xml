<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="bsi_merge_quotations_action" model="ir.ui.view">
			<field name="name">Merge Quotations</field>
			<field name="model">bsi.merge.quotations</field>
			<field name="arch" type="xml">
				<form string="Quotations">
				<sheet>
					<group>
						<field name="customer" />
						<field name="quotations_date"/>
						<field name="sale_order_line"  widget="many2many_tags" invisible="1" />
					</group>
					<footer>						
						<button name="merge_quotations" string="Merge Quotations" type="object" class="btn btn-primary" />

						<button name="merge_andnew" string="Merge and New" type="object"  class="btn btn-primary" id="create_wizard_open" context="{'open_wizard': True}" />

						<button name="merge_andview" string="Merge and View" type="object" class="btn btn-primary" />

						<button string="Cancel" type="object" class="btn btn-secondary" special="cancel"/>
					</footer>
				</sheet>
				</form>
			</field>
		</record>	

		<record id="action_bsi_merge_quotations" model="ir.actions.act_window">
	        <field name="name">Merge Quotations</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">bsi.merge.quotations</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="bsi_merge_quotations_action"/>
	        <field name="target">new</field>
	        <field name="binding_model_id" ref="sale.model_sale_order" />
		</record>
	</data>
</odoo>