<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_inventory_inherit" model="ir.ui.view">
        <field name="name">stock.quant.inventory.tree.editable.inherited</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="inventory_zone_id" options="{'no_create':1,'no_open':1}"
                       attrs="{'readonly': [('id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="domain">[('inventory_zone_id', '=',
                    inventory_zone_id)]</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>