<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="dojo_view_kanban" model="ir.ui.view">
        <field name="name">Dojo Kanban</field>
        <field name="model">sirius.dojo</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="pic"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="o_kanban_image">
                                <t t-if="record.pic.value">
                                    <img t-att-src="kanban_image('sirius.dojo', 'pic', record.id)" alt="Dojo"/>
                                </t>
                                <t t-if="!record.pic.value">
                                    <img t-att-src='_s + "/base/static/img/avatar.png"' alt="Dojo"/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open">
                                        <field name="name"/>
                                    </a>
                                </h4>
                                <ul>
                                    <li t-if="record.organizacion_id">
                                        <span>Organización:</span>
                                        <field name="organizacion_id"/>
                                    </li>
                                    <li t-if="record.asociacion_id">
                                        <span>Asociación:</span>
                                        <field name="asociacion_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- explicit list view definition -->
    <record id="dojo_view_list" model="ir.ui.view">
        <field name="name">Lista de Dojos</field>
        <field name="model">sirius.dojo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="organizacion_id"/>
                <field name="asociacion_id"/>
                <!--field name="academia_id"/-->
                <!--field name="sensei_id"/-->
            </tree>
        </field>
    </record>
    <record id="dojo_view_form" model="ir.ui.view">
      <field name="name">Formulario de Dojo</field>
      <field name="model">sirius.dojo</field>
      <field name="arch" type="xml">
        <form string="Registro de Dojos">
          <sheet>
          <h1>Plantilla de Dojos</h1>
            <group string="Identificación">
              <group style="width:20%">
                <field name="pic" 
                  widget='image' 
                  class="oe_avatar" 
                  nolabel="1"
                  style="margin-right:10px;" 
                  options='{"preview_image": "image_128"}'/>
              </group>
              <group >  
                <field name="name"/>
                <field name="sensei_id"/>
                <field name="address"/>
                <field name="notes"/>
              </group>
            </group>
            <group name="instituciones" string="Instituciones">
                <group>
                    <field name="organizacion_id"/>
                    <field name="asociacion_id"/>
                </group>
            </group>
            <group string="Listado de Atletas">
                <field name="atleta_ids"></field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
</odoo>